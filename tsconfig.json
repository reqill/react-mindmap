{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    // "typeRoots": ["./dist/index.d.ts"], doesn't work with "types" above and without them global types are not found

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "index.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "paths": {
    "@hooks/*": ["./src/hooks/*"],
    "@components/*": ["./src/components/*"],
    "@utils/*": ["./src/utils/*"],
    "@styles/*": ["./src/styles/*"],
    "@types/*": ["src/types/*"],
    "@assets/*": ["./src/assets/*"],
    "@constants/*": ["./src/constants/*"]
  },
  "rootDir": "./"
}
